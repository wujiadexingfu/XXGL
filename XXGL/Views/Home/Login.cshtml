<body>
    <div class="container">
        <div class="row" style="margin:0,auto">
            <div class=" col-md-6 col-sm-12   " style="height:100%;  text-align: center;">
                <img src="@Url.Content("~/Content/images/timg.jpg")" style="height:80%;width:80%;margin-top:10%" />
            </div>
            <div class=" col-md-6 col-sm-12 ">
               
                @using (Html.BeginForm("Login",null,FormMethod.Post, new { @class = "form-horizontal col-sm-8 " ,@style="margin:80px" }))
                { 
                 @*<form class="form-horizontal col-sm-8 " style="margin:80px">*@
                    <span class="heading">@Resources.Resource.Login</span>
                    <div class="form-group">
                        @Html.TextBoxFor(x => x.UserID, new { @placeholder = Resources.Resource.UserID, @class = "form-control" })
                        <i class="fa fa-user"></i>
                        @Html.ValidationMessageFor(x => x.UserID)
                    </div>
                    <div class="form-group help">
                        @Html.PasswordFor(x => x.PassWord, new { @placeholder = Resources.Resource.PassWord, @class = "form-control" })
                        <i class="fa fa-lock"></i>
                        <a href="#" class="fa fa-question-circle"></a>
                        @Html.ValidationMessageFor(x => x.PassWord)
                    </div>
                    <div class="form-group ">
                        <div class="col-sm-6">
                            @Html.TextBoxFor(x => x.VerficationCode, new { @class = "form-control", @placeholder = Resources.Resource.VerficationCode })
                
                            @Html.ValidationMessageFor(x => x.VerficationCode)
                        </div>
                        <div class="col-sm-6">
                            <img id="imgValidateCode" onclick="CodeChange();" style="cursor: pointer;" src="@Url.Action("GetValidateCode", "Home")" title="@Resources.Resource.ChangeVerficationCode" />
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="main-checkbox">
                            <input type="checkbox" value="None" id="checkbox1" name="check" />
                            <label for="checkbox1"></label>
                        </div>
                        <span class="text">@Resources.Resource.RememberMe</span>
                        <button type="submit" class="btn btn-default">@Resources.Resource.Login</button>
                    </div>
                @*</form>*@
                
                }
            </div>
        </div>
    </div>
</body>


<script>
    ///更换验证码图案
    var CodeChange = function ()
    {
        var imgNode = $("#imgValidateCode");
        imgNode.attr("src", "@Url.Action("GetValidateCode", "Home")?t=" + (new Date()).valueOf());
    }
</script>