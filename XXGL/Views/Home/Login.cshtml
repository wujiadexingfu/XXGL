<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0">

    <title>信息管理系统 - 登录</title>
    <link href="@Url.Content("~/Content/bootstrap.min.css")" rel="stylesheet" />
    <script src="@Url.Content("~/Scripts/jquery-1.10.2.min.js")"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.min.js")"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.js")"></script>

    <link href="~/Content/custom.css" rel="stylesheet" />
    <!--[if lt IE 9]>
    <meta http-equiv="refresh" content="0;ie.html" />
    <![endif]-->
    <script>
        if (window.top !== window.self) { window.top.location = window.location };
    </script>

</head>

<body class="signin">
    <div class="signinpanel">
        <div class="row">
            <div class="col-md-3">
            </div>
            <div class="col-md-6">
                @using (Html.BeginForm("Login","Home"))
                {
                    <h2 class="no-margins" style="text-align:center;color:black;"><strong>登录</strong></h2>
                    @Html.TextBoxFor(x => x.UserID, new { @class = "form-control uname ", placeholder = "人员编号"})
                    @Html.ValidationMessageFor(x => x.UserID)
                    @Html.PasswordFor(x => x.PassWord, new { @class = "form-control pword ", placeholder ="密码" })
                    @Html.ValidationMessageFor(x=>x.PassWord)

                    <div class="row">
                        <div class="col-sm-6 col-md-6" style="float:left">
                            @Html.TextBoxFor(x => x.VerficationCode, new { @class = "form-control", @placeholder = "验证码",@style="color:black;"  })

                        @Html.ValidationMessageFor(x => x.VerficationCode)
                    </div>
                        <div class="col-sm-6 col-md-6" style="float:left"><img id="imgValidateCode" style="cursor: pointer; margin-top:15px;" src="@Url.Action("GetValidateCode", "Home")" title="改变验证码" onclick="CodeChange()" /></div>
                    
                     

                    
                    </div>
                    <button class="btn btn-success btn-block ">登录</button>
                }
            </div>
            <div class="col-md-3">
            </div>
        </div>
        <div class="signup-footer">
            <div class="pull-right">
                版本: @Utility.Define.Version
            </div>
        </div>
    </div>
</body>


<!-- Mirrored from www.zi-han.net/theme/hplus/login_v2.html by HTTrack Website Copier/3.x [XR&CO'2014], Wed, 20 Jan 2016 14:19:52 GMT -->
</html>


<script>
    ///更换验证码图案
    var CodeChange = function () {
        var imgNode = $("#imgValidateCode");
        imgNode.attr("src", "@Url.Action("GetValidateCode", "Home")?t=" + (new Date()).valueOf());
    }

</script>