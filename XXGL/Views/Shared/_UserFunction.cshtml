@model  XXGL.Base.Models.Authenticated.Account
@{
    Layout = null;
}

<li class="dropdown user user-menu">
    <a href="#" class="dropdown-toggle" data-toggle="dropdown">
        <img src="@Url.Content("~/Content/Images/profile_small.jpg")" class="user-image" alt="User Image">
        <span class="hidden-xs">@Model.Name</span>
    </a>
    <ul class="dropdown-menu">
        <!-- User image -->
        <li class="user-header">
            <img src="@Url.Content("~/Content/Images/profile_small.jpg")" class="img-circle" alt="User Image">
            <p>
                @Model.Name
                <small>@DateTime.Now.ToString("yyyy/MM/dd")</small>
            </p>
        </li>
        <!-- Menu Body -->
        <li class="user-body">
            <ul style="list-style: none;">
                <li>
                    <a href="javascript:;">
                        <span>版本 </span>
                        <span class="pull-right">@Utility.Define.Version</span>
                    </a>
                </li>

                <li>
                    <a href="javascript:;">
                        <span>语言 </span>
                        <span class="pull-right">中文 </span>
                    </a>
                </li>
            </ul>
        </li>
        <!-- Menu Footer-->
        <li class="user-footer">
            <div class="pull-left">
                <a href="@Url.Action("ChangePassword", "Home", new { area = "" })" class="btn btn-default btn-flat  fa  fa-key">修改密码</a>
            </div>
            <div class="pull-right">
                <a href="#" class="btn btn-default btn-flat  fa fa-sign-out" title="登出">登出</a>
            </div>
        </li>
    </ul>
</li>
  
