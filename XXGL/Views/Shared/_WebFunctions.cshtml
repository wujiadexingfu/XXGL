@model XXGL.Base.Models.Authenticated.Account
@{
    Layout = null;
}

@foreach (var ancestor in Model.WebFunctionList)
{
    if (ancestor.SubWebFuntionList != null && ancestor.SubWebFuntionList.Count != 0)
    {
        <li class="treeview" id="@ancestor.ID">
            <a href="#">
                <i class="fa  @ancestor.Icon"></i> <span>@ancestor.Description</span>
                <span class="pull-right-container">
                    <i class="fa fa-angle-left pull-right"></i>
                </span>
            </a>
            <ul class="treeview-menu">
                @foreach (var parent in ancestor.SubWebFuntionList)
                {
                    if (parent.SubWebFuntionList != null && parent.SubWebFuntionList.Count != 0)
                    {
                        <li class="treeview" id="@parent.ID">
                            <a href="#">
                                <i class="fa fa-share"></i> <span>@parent.Description</span>
                                <span class="pull-right-container">
                                    <i class="fa fa-angle-left pull-right"></i>
                                </span>
                            </a>
                            <ul class="treeview-menu">
                                @foreach (var currert in parent.SubWebFuntionList)
                                {
                                    <li id="@currert.ID"><a href="@Url.Action(currert.Action, currert.Controller, new { area = currert.Area })"><i class="fa @currert.Icon"></i> @currert.Description</a></li>
                                }
                            </ul>
                        </li>
                    }
                    else
                    {
                        <li id="@parent.ID"><a href="@Url.Action(parent.Action, parent.Controller, new { area = parent.Area })"><i class="fa @parent.Icon"></i> @parent.Description</a></li>
                    }
                }
            </ul>
        </li>
    }
    else
    {
        <li id="@ancestor.ID"><a href="@Url.Action(ancestor.Action, ancestor.Controller, new { area = ancestor.Area })"><i class="fa @ancestor.Icon"></i> @ancestor.Description</a></li>
    }
}




